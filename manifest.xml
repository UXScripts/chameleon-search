<?xml version="1.0" encoding="UTF-8" ?>
<manifest xmlns="http://chameleonlauncher.com/widgets">
  <widget>
    <guid>com.matthewtole.chameleon.search</guid> 
    <baseURL>http://matthewtole.com/chameleon/search/</baseURL> 
    <name>Web Search</name> 
    <description>Search the web using a variety of search engines.</description> 
    <version>0.0.3</version> 
  </widget>  
  <style>
    <icons>
      <large>images/icon.png</large> 
    </icons>
    <color>#000000</color> 
    <showTitleBar>true</showTitleBar> 
    <showBackgroundShadow>true</showBackgroundShadow> 
    <allowRefresh>false</allowRefresh> 
    <allowConfigure>true</allowConfigure> 
  </style>
  <author>
    <name>Matthew Tole</name>
    <website>http://matthewtole.com/</website>
    <email>mail@matthewtole.com</email>
    <support type="email">chameleon@matthewtole.com</support>
    <support type="URL">http://matthewtole.com/chameleon/</support>
  </author>
  <resources>
    <resource name='index.html' />
    <resource name='settings.html' />
    <resource name='js/underscore-min.js' />
    <resource name='js/ICanHaz.js' />
    <resource name='js/gecko/gecko.js' />
    <resource name='js/index.main.js' />
    <resource name='js/settings.main.js' />
    <resource name='css/widget.css' />
    <resource name='images/icon.png' />
    <resource name='images/icon_search.png' />
    <resource name='images/icon_voice.png' />
  </resources>
</manifest>
